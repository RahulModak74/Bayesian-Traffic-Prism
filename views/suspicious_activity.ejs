            <form id="ipForm" action="/suspicious_activity" method="get" style="display: flex; align-items: center;" onsubmit="disableSubmitButton(event)">
                <div class="input-field" style="margin-right: 10px;">
                    <label for="ip">Enter IP Address:</label>
                    <input type="text" id="ip" name="ip" required placeholder="IP Address">
                </div>
                <button id="submitBtn" type="submit" style="height: 40px;">Submit</button>
            </form>
            
            <script>
              // Add event listener to the form submit event
              document.getElementById('ipForm').addEventListener('submit', function(event) {
                const ipInput = document.getElementById('ip');
                ipInput.value = ipInput.value.trim(); // Trim leading and trailing spaces
              });
              function disableSubmitButton(event) {
                event.preventDefault(); // Prevent immediate form submission
            
                const submitBtn = document.getElementById('submitBtn');
                submitBtn.disabled = true;
                submitBtn.innerHTML = 'Processing...'; // Show feedback immediately
            
                // Slightly longer delay to allow UI to update before submission
                setTimeout(() => {
                  event.target.submit(); // Programmatically submit the form
                }, 300); // 300ms delay to ensure UI update
              }
            </script>
            


            <!-- IP Check Report -->
            <% if (ip) { %>
                <h2>IP Check Report for <%= ip %>
                </h2>
                <table>
                    <thead>
                        <tr>
                            <th>Tools</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                IP Quality Score <br> 
                                <span class="info-icon">i
                                    <span class="tooltip-text">Trusted by prominent organizations such as CrowdStrike Falcon, Rakuten, Costco, and Royal Caribbean to enhance their fraud detection and risk management capabilities</span>
                                </span>
                            </td>
                            <td>
                                <%= ipQualityScoreData ? JSON.stringify(ipQualityScoreData, null, 2) : 'No Data' %>
                            </td>
                        </tr>
                        
                        <tr>
                            <td>AbuseIPDB
                                <span class="info-icon">i
                                    <span class="tooltip-text">Leveraged by leading platforms like Microsoft Sentinel and Microsoft Copilot to safeguard against abusive IP addresses, ensuring a secure digital environment.</span>
                                </span>
                            </td>
                            <td>
                                <%= abuseIpDBData ? JSON.stringify(abuseIpDBData, null, 2) : 'No Data' %>
                            </td>
                        </tr>
                       
                        <tr>
                            <td>VirusTotal
                                <span class="info-icon">i
                                    <span class="tooltip-text">Employed by companies such as Affmi, Can, and Mobionetwork, providing them with crucial insights to combat online fraud effectively.</span>
                                </span>
                            </td>
                            <td>
                                <%= virusTotalData ? JSON.stringify(virusTotalData, null, 2) : 'No Data' %>
                            </td>
                        </tr>
                        <tr>
                            <td>FraudGuard
                                <span class="info-icon">i
                                    <span class="tooltip-text"> A preferred choice for tech giants like Google, Okta, CipherTech Solutions, and Cyware, utilizing its extensive malware scanning and threat intelligence services to protect their assets.</span>
                                </span>
                            </td>
                            <td>
                                <%= fraudGuardData ? JSON.stringify(fraudGuardData, null, 2) : 'No Data' %>
                            </td>
                        </tr>

                        <tr>
                            <td>IP Risk Score</td>
                            <td>
                                <%= calculateIPRisk ? JSON.stringify(calculateIPRisk, null, 2) : 'No Data' %>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <% } %>
        </div>
    </div>
